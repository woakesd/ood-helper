                <DataGridTextColumn Header="Class" Width="*"/>
                <DataGridTextColumn Header="Sail No" Width="*"/>
                <DataGridTextColumn Header="Lap 1" Width="*"/>
                <DataGridTextColumn Header="Lap 2" Width="*"/>
                <DataGridTextColumn Header="Lap 3" Width="*"/>
                <DataGridTextColumn Header="Lap 4" Width="*"/>
                <DataGridTextColumn Header="Lap 5" Width="*"/>
                <DataGridTextColumn Header="Lap 6" Width="*"/>
                <DataGridTextColumn Header="Lap 7" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>-->
        <Grid Grid.Row="3" Grid.ColumnSpan="3" Name="EntriesTable">
            <Grid.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="5,0,0,0"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="1"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="2"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="3"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="4"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="5"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="6"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="7"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="8"/>
            <Border Grid.RowSpan="16" BorderThickness="1,1,0,0" BorderBrush="Black" Grid.Column="9"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="1"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="2"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="3"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="4"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="5"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="6"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="7"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="8"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="9"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="10"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="11"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="12"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="13"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="14"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="15"/>
            <Border Grid.ColumnSpan="10" BorderThickness="0,0,1,1" BorderBrush="Black" Grid.Row="16"/>
            <TextBlock>Boat name</TextBlock>
            <TextBlock Grid.Column="1">Class</TextBlock>
            <TextBlock Grid.Column="2">Sail No</TextBlock>
            <TextBlock Grid.Column="3">Lap 1</TextBlock>
            <TextBlock Grid.Column="4">Lap 2</TextBlock>
            <TextBlock Grid.Column="5">Lap 3</TextBlock>
            <TextBlock Grid.Column="6">Lap 4</TextBlock>
            <TextBlock Grid.Column="7">Lap 5</TextBlock>
            <TextBlock Grid.Column="8">Lap 6</TextBlock>
            <TextBlock Grid.Column="9">Lap 7</TextBlock>
        </Grid>
    </Grid>
</Page>
