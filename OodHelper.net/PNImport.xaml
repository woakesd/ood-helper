<Window x:Class="OodHelper.PnImport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PNImport" Height="292" Width="546">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBox Name="fileName" Width="120" Margin="3" />
            <Button Content="Browse..." Click="browse_Click" Name="browse" Margin="3" />
            <Button Content="Import..." Click="import_Click" Name="import" Margin="3"/>
        </StackPanel>
        <DataGrid Grid.Row="1" HorizontalAlignment="Stretch" Name="pn" VerticalAlignment="Stretch" />
    </Grid>
</Window>
