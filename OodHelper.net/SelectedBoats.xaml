<UserControl x:Class="OodHelper.net.SelectedBoats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" BorderBrush="DarkSeaGreen" BorderThickness="1" HorizontalContentAlignment="Stretch">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.ColumnSpan="2" Height="23" Name="FleetName" VerticalAlignment="Top" FontSize="10" Margin="0,0,0,0">Fleet name</Label>
        <Button Grid.Column="0" Name="Remove" Grid.Row="1" Height="23" Width="23" Margin="5,0,5,0" Click="Remove_Click">&lt;&lt;</Button>
        <DataGrid Grid.Column="1" Grid.Row="1" Margin="0,0,0,0" Name="Boats" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" MouseDoubleClick="Boats_MouseDoubleClick" AutoGeneratedColumns="Boats_AutoGeneratedColumns"/>
    </Grid>
</UserControl>
