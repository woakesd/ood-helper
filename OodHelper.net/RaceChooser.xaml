<Window x:Class="OodHelper.net.RaceChooser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Race Chooser" Height="300" Width="660" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit">
    <Grid>
        <Canvas Name="canvas1" Height="35" VerticalAlignment="Top">
            <Button Canvas.Left="6" Canvas.Top="6" Height="23" Name="buttonResults" Width="75" Click="buttonResults_Click">Results</Button>
        </Canvas>
        <DockPanel Margin="0,35,0,0" Name="calDockPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid Name="CalGrid" CanUserDeleteRows="False" CanUserAddRows="False" IsReadOnly="True" />
        </DockPanel>
    </Grid>
</Window>
