<Window x:Class="OodHelper.net.Boats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >
    <Grid>
        <ToolBarTray Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,0">
            <ToolBar>
                <Button Name="AddBoat" Click="AddBoat_Click">Add</Button>
                <Button Name="EditBoat" Click="EditBoat_Click">Edit</Button>
                <Button Name="Close" Click="Close_Click">Close</Button>
            </ToolBar>
        </ToolBarTray>
        <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
            <DataGrid Margin="0,25,0,0" Name="BoatData" IsReadOnly="True" >
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Edit" Click="EditBoat_Click" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
