<Window x:Class="OodHelper.Working"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Working" mc:Ignorable="d" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        d:DesignHeight="173" d:DesignWidth="300" SizeToContent="WidthAndHeight"
        ShowInTaskbar="False">
    <StackPanel Orientation="Vertical">
        <TextBlock Name="Message" Margin="5">Working...</TextBlock>
        <ProgressBar Grid.Row="1" Margin="5" Height="15" MinWidth="200" Name="Progress" />
        <Button Margin="100,5" Click="Cancel_Click" Name="CancelButton" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <Image Source="/OodHelper.net;component/Images/Cancel.png" />
                <Label>Cancel</Label>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
